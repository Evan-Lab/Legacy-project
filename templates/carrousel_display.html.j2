<div class="modal fade"
     id="carousel_modal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="carouselmodal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <h5 class="modal-header d-inline-flex justify-content-between">
                {% if wizard %}
                    <a href="/m=SND_IMAGE_C&i={{ index }}"
                       title="{{ _("add") |capitalize }}/{{ _("delete") }} {{ _("image/images", variant='1') }} ({% if has_portrait %}1 {{ _("portrait") }}{% endif %}/{{ carrousel_img_nbr }} {% if ( carrousel_img_nbr > 1 ) %}{{ _("image/images", variant='1') }}{% else %}{{ _("image/images", variant='0') }}{% endif %})">
                    {% endif %}
                    {% if has_portrait %}1<i class="fas fa-image-portrait ml-1 mr-2" aria-hidden="true"></i>{% endif %}
                    {{ carrousel_img_nbr }}<i class="far fa-image fa-fw ml-1" aria-hidden="true"></i>
                    {% if wizard %}</a>{% endif %}
                {% if ( public_name != "" ) %}
                    {{ public_name }}
                {% else %}
                    {{ first_name }}
                {% endif %}
             {{ surname }}</span>
            <div class="btn-group">
                <a role="button"
                   class="btn btn-link p-0 "
                   href="#carousel"
                   data-slide="prev">
                    <i class="fa fa-chevron-left fa-fw "
                       aria-hidden="true"
                       title="{{ _("previous") |capitalize }}"></i>
                    <span class="sr-only">{{ _("previous") |capitalize }}</span>
                </a><a role="button"
   class="btn btn-link p-0"
   href="#carousel"
   data-slide="next">
                <i class="fa fa-chevron-right fa-fw"
                   aria-hidden="true"
                   title="{{ _("next") |capitalize }}"></i>
                <span class="sr-only">{{ _("next") |capitalize }}</span>
            </a>
        </div>
    </h5>
    <div class="modal-body d-flex justify-content-center">
        <div id="carousel"
             class="carousel slide"
             data-ride="carousel"
             data-interval="5000">
            <div class="carousel-inner">
                {{ reset_count }}
                {% if has_portrait %}
                    <div class="carousel-item active">
                        <a href="/m=IM&i={{ index }}" target="_blank" rel="noopener">
                            <img class="img-fluid"
                                 src="/m=IM&i={{ index }}"
                                 alt="{{ _("portrait") |capitalize }}">
                        </a>
                        <div class="position-relative d-none d-md-block">
                            <span>{{ _("portrait") }}</span>
                        </div>
                    </div>
                {% endif %}
                {% if has_blason_self %}
                    <div class="carousel-item{% if ( not has_portrait ) %}active{% endif %}">
                        {% if ( "http" in blason_self ) %}
                            <a href="{{ blason }}" target="_blank" rel="noopener">
                                <img class="img-fluid"
                                     src="{{ blason }}"
                                     alt="{{ _("blason/blasons", variant='0') |capitalize }} yy">
                            </a>
                        {% else %}
                            <a href="/m=FIM&i={{ index }}" target="_blank" rel="noopener">
                                <img class="img-fluid"
                                     src="/m=FIM&i={{ index }}"
                                     alt="{{ _("blason/blasons") |capitalize }} xx">
                            </a>
                        {% endif %}
                        <div class="position-relative d-none d-md-block">
                            <span>{{ _("blason/blasons", variant='0') }}</span>
                        </div>
                    </div>
                {% endif %}
                {% if ( carrousel_img_nbr > 0 ) %}{# foreach not implemented yet #}{% endif %}
            </div>
        </div>
    </div>
</div>
</div>
</div>
