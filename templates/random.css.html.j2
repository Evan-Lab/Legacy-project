{# Bright pastel color generator #}
{% macro bright_pastel_color() -%}
  {% set h = random_255() %}
  {% set s = random_64() %}
  {% set v = 192 + random_64() %}
  rgb({{ red_of_hsv(h, s, v) }},{{ green_of_hsv(h, s, v) }},{{ blue_of_hsv(h, s, v) }})
{%- endmacro %}

{# Dark color generator #}
{% macro dark_col() -%}
  {% set h = random_255() %}
  {% set s = 255 %}
  {% set v = 160 %}
  rgb({{ red_of_hsv(h, s, v) }},{{ green_of_hsv(h, s, v) }},{{ blue_of_hsv(h, s, v) }})
{%- endmacro %}

{# Initialize random seed and generate base colors #}
{% do random_init() %}
{% set h = random_255() %}
{% set s = random_128() %}
{% set v = 160 + random_96() %}
{% set bg = 'rgb(' ~ red_of_hsv(h, s, v) ~ ',' ~ green_of_hsv(h, s, v) ~ ',' ~ blue_of_hsv(h, s, v) ~ ')' %}
