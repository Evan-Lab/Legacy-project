{% set v = v + 10 + random_20() %}
{% set bg2 = 'rgb(' ~ red_of_hsv(h, s, v) ~ ',' ~ green_of_hsv(h, s, v) ~ ',' ~ blue_of_hsv(h, s, v) ~ ')' %}

