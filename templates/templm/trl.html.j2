    <script>
        function reloadClose() {
            window.opener.location.reload();
            parent.close();
        }
        var htmlTitle = document.title;
        if (
            htmlTitle == "{{ _(person modified)|capitalize }}" ||
            htmlTitle == "{{ _(family modified)|capitalize }}" ||
            htmlTitle == "{{ _(person added)|capitalize }}" ||
            htmlTitle == "{{ _(family added)|capitalize }}"
        ) {
            if (window.opener && !window.opener.closed) {
                document.getElementById("trl").innerHTML = "<p><a id=\"reload_close\" href=\"javascript:reloadClose()\">{{ _(X) }}</a></p>";
                document.getElementById("reload_close").focus();
            }
        }
    </script>
{% endif %}
