{{ doctype }}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <!-- $Id: templm/updmenu1.txt v7.0 2015/03/25 14:51:55 $ -->
        <title>{{ _(update) |capitalize }}</title>
        <meta name="robots" content="none" />
        <meta name="format-detection" content="telephone=no" />
        <meta http-equiv="Content-Type" content="text/html; charset={{ charset }}" />
        <meta http-equiv="Content-Style-Type" content="text/css" />
        <link rel="shortcut icon"
              href="{{ url_for('static/images/', path='favicon_gwd.png') }}" />
        {% include 'css' %}
        <style type="text/css">
            tr {
                text-align: left;
            }
        </style>
    </head>
    <body {{ body_prop }} id="menutxt">
        {% include 'hed' %}
        {{ message_to_wizard }}
        <h1>
            {{ _(update) |capitalize }}
            <br>
            {{ first_name }}.
            {% if ( ( first_name == "?" ) or ( surname == "?" ) ) %}
                {{ index }}
            {% else %}
                {{ occ }}
            {% endif %}
            {{ surname }}
        </h1>
        <table border="{{ border }}" width="90%">
            <tr>
                <th>{{ _(person/persons, variant='0') |capitalize }}</th>
                <th>{{ _(family/families, variant='1') |capitalize }}</th>
            </tr>
            <tr>
                <td>
                    <br>
                    <a href="/m=MOD_IND;i={{ index }}"
                       title="{{ _(modify::person/persons, variant='0') |capitalize }} (P)"
                       accesskey="P">{{ _(modify::) |capitalize }} (P)</a>
                    <br>
                    {% if ( ( bvar.can_send_image != "no" ) and ( ( not has_portrait_url ) and ( ( first_name != "?" ) and ( surname != "?" ) ) ) ) %}
                        <a href="/m=SND_IMAGE;i={{ index }}">{{ _(send::image/images, variant='0') |capitalize }}</a>
                        <br>
                        {% if ( auto_image_file_name != "" ) %}
                            <a href="/m=DEL_IMAGE;i={{ index }}">{{ _(delete::image/images, variant='0') |capitalize }}</a>
                            <br>
                        {% endif %}
                    {% endif %}
                    <br>
                    <a href="/m=DEL_IND;i={{ index }}">{{ _(delete::) |capitalize }}</a>
                    <br>
                    <br>
                    <a href="/m=MRG;i={{ index }}">{{ _(merge::) |capitalize }}</a>
                    <br>
                    {% if ( ( not has_parents ) and ( ( first_name != "?" ) and ( surname != "?" ) ) ) %}
                        <br>
                        <a href="/m=ADD_PAR;ip={{ index }}">{{ _(add::parents) |capitalize }}</a>
                        <br>
                    {% endif %}
                </td>
                <td>
                    {# foreach not implemented yet #}
                    <br>
                    {% if ( ( ( first_name == "?" ) or ( surname == "?" ) ) and ( ( nb_families != 0 ) or has_parents ) ) %}
                    {% else %}
                        {% if ( is_male or is_female ) %}
                            <a href="/m=ADD_FAM;ip={{ index }}"
                               title="{{ _(add::family/families, variant='0') }} (A)"
                               accesskey="A">{{ _(add::family/families, variant='0') |capitalize }} (A)</a>
                            <br>
                        {% endif %}
                    {% endif %}
                    {% if ( nb_children != 0 ) %}
                        <br>
                        <a href="/m=CHG_CHN;ip={{ index }}">{{ _(change children's names)|capitalize }}</a>
                    {% endif %}
                    {% if has_possible_duplications %}
                        <br>
                        <a href="/m=MRG_DUP;ip={{ index }}">{{ _(merge::possible duplications)|capitalize }}</a>
                    {% endif %}
                </td>
            </tr>
        </table>
        {% macro hint(xx) %}
            {{ _(to add a child to a family, use "%s":::xx)|capitalize }}
        {% endmacro %}
        {% if ( nb_families != 0 ) %}
            <p>
                {{ hint(_(modify::family/families, variant='0') |capitalize) }}
                <br>
            </p>
        {% endif %}
        {% include 'trl' %}
        {% include 'copyr' %}
        {{ query_time }}
    </body>
</html>
