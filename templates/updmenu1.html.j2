        <title>{{ _("update") |capitalize }}</title>
        <meta name="robots" content="none">
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="shortcut icon"
              href="{{ url_for('static', path='images/favicon_gwd.png') }}">
        {% include 'favicon.html.j2' %}
        {% include 'css.html.j2' %}
    </head>
    <body {{ body_prop }}>
        {% include 'hed.html.j2' %}
        {{ message_to_wizard }}
        <div class="container">
            {% include 'perso_header.html.j2' %}
            <h1>
                {{ _("update") |capitalize }}:
                <br>
                {{ first_name }}.
                {% if ( ( first_name == "?" ) or ( surname == "?" ) ) %}
                    {{ index }}
                {% else %}
                    {{ occ }}
                {% endif %}
                {{ surname }}
            </h1>
            <table border="{{ border }}" width="90%">
                <tr align="{{ left }}">
                    <th align="{{ left }}" style="color:{{ highlight }}">{{ _("family/families", variant='1') |capitalize }}</th>
                </tr>
                <tr align="{{ left }}">
                    <td valign="top">
                        {# foreach not implemented yet #}
                        <br>
                        {% if ( ( ( first_name == "?" ) or ( surname == "?" ) ) and ( ( nb_families != 0 ) or has_parents ) ) %}
                        {% else %}
                            {% if ( ( not is_male ) and ( not is_female ) ) %}
                                <a href="/m=ADD_FAM&ip={{ index }}&sex=M">{{ _("add::marriage/marriages", variant='0') |capitalize }} ({{ _("M/F", variant='0') }})</a>
                                <br>
                                <a href="/m=ADD_FAM&ip={{ index }}&sex=F">{{ _("add::marriage/marriages", variant='0') |capitalize }} ({{ _("M/F", variant='1') }})</a>
                                <br>
                            {% else %}
                                <a href="/m=ADD_FAM&ip={{ index }}" accesskey="A">{{ _("add::marriage/marriages", variant='0') |capitalize }}</a>
                                <br>
                            {% endif %}
                        {% endif %}
                        {% if ( nb_children != 0 ) %}
                            <br>
                            <a href="/m=CHG_CHN&ip={{ index }}">{{ _("change children's names") |capitalize }}</a>
                        {% endif %}
                        {% if has_possible_duplications %}
                            <br>
                            <a href="/m=MRG_DUP&ip={{ index }}">{{ _("merge::possible duplications") |capitalize }}</a>
                        {% endif %}
                    </td>
                </tr>
            </table>
            {% macro hint(xx) %}
                {{ _("to add a child to a family, use "%s":::xx") |capitalize }}
            {% endmacro %}
            {% if ( nb_families != 0 ) %}
                <p>
                    {{ hint(_("modify::family/families", variant='0') |capitalize) }}
                    <br>
                </p>
            {% endif %}
            {% include 'trl.html.j2' %}
            {% include 'copyr.html.j2' %}
        </div>
        {% include 'js.html.j2' %}
        {{ query_time }}
    </body>
