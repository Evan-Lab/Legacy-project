        <title>{{ _("link between") |capitalize }}{{ sp }}
            {% if public_name != "" %}
                {{ public_name }}
            {% else %}
                {{ first_name }} {{ surname }}
            {% endif %}
        {{ _('and', variant='0') }}…</title>
        <meta name="robots" content="none">
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="shortcut icon"
              href="{{ url_for("static", path="images/favicon_gwd.png") }}">
        {% include 'favicon.html.j2' %}
        {% include 'css.html.j2' %}
    </head>
    <body {{ body_prop }} onload="main()">
        {% include 'hed.html.j2' %}
        <div class="container">
            {{ message_to_wizard }}
            {% include 'perso_header.html.j2' %}
            <h1 class="text-center">
                {{ _("link between") |capitalize }}{{ sp }}
                {% if public_name != "" %}
                    {{ public_name }}
                {% else %}
                    {{ first_name }}
                {% endif %}
                {% if qualifier != "" %}<em>{{ qualifier }}</em>{% endif %}
                {{ sp }}{{ surname }}
                {% if alias != "" %}<em>({{ alias }})</em>{% endif %}
                {{ sp }}{{ _('and', variant='0') }}…
            </h1>
            <form name="relationship" method="submit" action="{{ action }}">
                <div class="row">
                    <div id="rel_form_shortcut" class="col-4">
                        <input type="hidden" name="em" value="R">
                        {% if access_by_key %}
                            <input type="hidden" name="ep" value="{{ first_name_key_val }}">
                            <input type="hidden" name="en" value="{{ surname_key_val }}">
                            {% if occ != "0" %}<input type="hidden" name="eoc" value="{{ occ }}">{% endif %}
                        {% else %}
                            <input type="hidden" name="ei" value="{{ index }}">
                        {% endif %}
                        <input type="hidden" name="m" value="NG">
                        <span>{{ _("relationship shortcut") |capitalize }}{{ _(":") }}</span>
                        <div class="mt-1 ml-2">
                            {% if user.index != "" and not browsing_with_sosa_ref or browsing_with_sosa_ref and user.index != sosa_ref.index %}
                                <div class="custom-control custom-radio">
                                    <input type="radio"
                                           class="custom-control-input"
                                           id="sel_user"
                                           name="select"
                                           value="{{ user.index }}"
                                           onclick="main()">
                                    <label class="custom-control-label" for="sel_user">
                                        {{ user.ident }} ({{ _('user/password/cancel', variant='0') }})
                                    </label>
                                </div>
                            {% endif %}
                            {% if browsing_with_sosa_ref and self.index != sosa_ref.index %}
                                <div class="custom-control custom-radio">
                                    <input type="radio"
                                           class="custom-control-input"
                                           id="sel_sosa"
                                           name="select"
                                           value="{{ sosa_ref.index }}"
                                           onclick="main()">
                                    <label class="custom-control-label" for="sel_sosa">
                                        <b>{{ sosa_ref }}</b> (<i class="far fa-circle-dot fa-xs text-success mr-1"></i>{{ _("Sosa") }} 1)
                                    </label>
                                </div>
                            {% endif %}
                            {# foreach not implemented yet #}{# foreach not implemented yet #}{# foreach not implemented yet #}{# foreach not implemented yet #}
                        </div>
                    </div>
                    <div class="col-4">
                        {{ hidden }}
                        <div id="rel_form_search"
                             onclick="document.getElementById('radio_R').checked = 'checked'; main();">
                            <input type="hidden" name="em" value="R">
                            {% if access_by_key %}
                                <input type="hidden" name="ep" value="{{ first_name_key_val }}">
                                <input type="hidden" name="en" value="{{ surname_key_val }}">
                                {% if occ != 0 %}<input type="hidden" name="eoc" value="{{ occ }}">{% endif %}
                            {% else %}
                                <input type="hidden" name="ei" value="{{ index }}">
                            {% endif %}
                            <input type="hidden" name="m" value="NG">
                            <div class="custom-control custom-radio">
                                <input type="radio"
                                       class="custom-control-input"
                                       id="radio_R"
                                       name="select"
                                       value="input"
                                       onclick="main()"
                                       checked>
                                <label class="custom-control-label" for="radio_R">
                                    {{ _('search/case sensitive', variant='0') |capitalize }} {{ _("any individual in the base") }}{{ _(":") }}
                                </label>
                            </div>
                            <div>
                                <label class="sr-only" for="n">
                                    {{ _("public name") |capitalize }}, {{ _("alias") }}
                                    {% if browsing_with_sosa_ref %}, {{ _("n° Sosa relative to") }}{% endif %}
                                    …
                                </label>
                                <input type="search"
                                       id="n"
                                       class="form-control mt-2"
                                       name="n"
                                       placeholder="{{ _("public name") |capitalize }}, {{ _("alias") }}{% if browsing_with_sosa_ref %}, {{ _("n° Sosa relative to") }}{% endif %}…"
                                       autofocus>
                                <label class="sr-only" for="firstname">{{ _('first name/first names', variant='0') |capitalize }}</label>
                                <input type="search"
                                       id="firstname"
                                       class="form-control mt-2"
                                       name="fn"
                                       placeholder="{{ _('first name/first names', variant='0') |capitalize }}">
                                <label class="sr-only" for="surname">{{ _('surname/surnames', variant='0') |capitalize }}</label>
                                <input type="search"
                                       id="surname"
                                       class="form-control mt-2"
                                       name="sn"
                                       placeholder="{{ _('surname/surnames', variant='0') |capitalize }}">
                            </div>
                        </div>
                        <div class="text-center my-4">
                            <button type="submit" class="btn btn-outline-primary btn-lg">
                                {{ _('validate/delete', variant='0') |capitalize }}
                            </button>
                        </div>
                    </div>
                    <div class="col-4 flex-column">
                        <div>
                            <span>{{ _("relationship computing mode") |capitalize }}{{ _(":") }}</span>
                            <div class="ml-2 mt-1">
                                <div class="custom-control custom-radio" id="rel_shortest_path">
                                    <input type="radio"
                                           class="custom-control-input"
                                           id="etS"
                                           name="et"
                                           value="S"
                                           checked>
                                    <label class="custom-control-label" for="etS">{{ _("shortest path") |capitalize }}</label>
                                </div>
                                <div class="custom-control custom-radio" id="rel_ancestors">
                                    <input type="radio"
                                           class="custom-control-input"
                                           id="etA"
                                           name="et"
                                           value="A">
                                    <label class="custom-control-label" for="etA">{{ _("relationship by ancestors") |capitalize }}</label>
                                </div>
                                <div class="custom-control custom-radio" id="rel_by_marriage">
                                    <input type="radio"
                                           class="custom-control-input"
                                           id="etM"
                                           name="et"
                                           value="M">
                                    <label class="custom-control-label" for="etM">{{ _("relationship by marriage") |capitalize }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-2">
                            <span>{{ _("relationship display options") |capitalize }}{{ _(":") }}</span>
                            <div class="ml-2 mt-1">
                                <div class="custom-control custom-checkbox">
                                    <input type=checkbox class="custom-control-input" id="long" name="long">
                                    <label class="custom-control-label" for="long">{{ _("long display") |capitalize }}</label>
                                </div>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox"
                                           class="custom-control-input"
                                           id="spouse"
                                           name="sp"
                                           value="1">
                                    <label class="custom-control-label" for="spouse">
                                        {{ _('visualize/show/hide/summary', variant='2') |capitalize }} {{ _("spouse/spouses") }}
                                    </label>
                                </div>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox"
                                           class="custom-control-input"
                                           id="image"
                                           name="im"
                                           value="0">
                                    <label class="custom-control-label" for="image">
                                        {{ _('visualize/show/hide/summary', variant='2') |capitalize }} {{ _('image/images', variant='1') }} <span class="text-info">✘</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        {% include 'trl.html.j2' %}
        {% include 'copyr.html.j2' %}
