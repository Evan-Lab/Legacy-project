<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <!-- $Id: updhist_diff.txt v7.1 10/01/2023 20:01:49 $ -->
  <title>{{ t('*revision history', 0) }}</title>
  <meta name="robots" content="none">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="shortcut icon" href="{{ images_prefix }}favicon_gwd.png">
  {% include 'css.html.j2' %}
</head>
<body{{ body_prop | safe }}>
  {% include 'hed.html.j2' %}
  {% include 'home.html.j2' %}

  <div class="container">
    <script><!--
    function update_new () {
      var input_new = $('input[type=radio][name=new]:checked').val(),
          input_old = $('input[type=radio][name=old]:checked').val();
      if (input_new >= input_old){
        var tmp = parseInt(input_new) + 1;
        $('input[type=radio][name=old][value='+input_old+']').prop('checked', false);
        $('input[type=radio][name=old][value='+tmp+']').prop('checked', true);
      }
    }
    function update_old () {
      var input_new = $('input[type=radio][name=new]:checked').val(),
          input_old = $('input[type=radio][name=old]:checked').val();
      if (input_old <= input_new){
        var tmp = parseInt(input_old) - 1;
        $('input[type=radio][name=new][value='+input_new+']').prop('checked', false);
        $('input[type=radio][name=new][value='+tmp+']').prop('checked', true);
      }
    }
    --></script>

    <h1 class="text-center">
      <a href="{{ prefix }}{{ acces }}">{{ person }}</a>
      {% if evar.t == "SUM" %}, {{ t('revision history', 0) }}
      {% else %}<br>{{ t('difference between the two revisions', 0) }}
      {% endif %}
    </h1>

    {% macro no_diff(xx) %}
      {{ t('*insufficient revision history for %s', 0, xx) }}
    {% endmacro %}

    {% macro print_summary() %}
    <form method="GET" action="{{ action }}">
      <p>{{ hidden | safe }}</p>
      <input type="hidden" name="m" value="HIST_DIFF"/>
      <input type="hidden" name="t" value="DIFF"/>
      <input type="hidden" name="f" value="{{ evar.f }}"/>
      
      {% if history_len >= 2 %}
        <button type="submit" class="btn btn-outline-primary mb-2">{{ t('*compare selected revisions', 0) }}</button>
      {% else %}
        {{ no_diff(person) }}
      {% endif %}

      <table class="table table-hover table-sm">
        <tr class="text-center">
          <th>{{ t('*compare', 0) }}</th>
          <th>{{ t('*date/dates', 0) }}</th>
          <th>{{ t('*wizard/wizards/friend/friends/exterior', 0) }}</th>
        </tr>
        {% for history_line in history_lines %}
          <tr>
            <td {% if loop.index0 % 2 != 0 %}class="odd"{% endif %}>
              <div class="form-inline">
                <input type="radio" class="form-control" name="old" value="{{ loop.index0 }}" onclick="update_old()" {% if loop.index0 == 0 %}style="visibility: hidden"{% elif loop.index0 == 1 %}checked{% endif %}/>
                <input type="radio" class="form-control ml-2" name="new" value="{{ loop.index0 }}" onclick="update_new()" {% if loop.index0 == 0 %}checked{% elif loop.index0 == history_len - 1 %}style="visibility: hidden"{% endif %}/>
              </div>
            </td>
            <td {% if loop.index0 % 2 != 0 %}class="odd"{% endif %}>{{ transl_date(history_line.date) }}</td>
            <td {% if loop.index0 % 2 != 0 %}class="odd"{% endif %}>{{ history_line.wizard }}</td>
          </tr>
        {% endfor %}
      </table>
    </form>
    {% endmacro %}

    {% macro empty() %}
    <tr>
      <td colspan="3"></td>
    </tr>
    {% endmacro %}

    {% macro print_diff_person() %}
      {% if before.first_name != after.first_name or before.surname != after.surname or before.occ != after.occ %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*name', 0) }}</th>
          <td class="odd">{{ before.first_name }}.{{ before.occ }} {{ before.surname }}</td>
          <td class="odd">{{ after.first_name }}.{{ after.occ }} {{ after.surname }}</td>
        </tr>
      {% endif %}

      {% if before.sex != after.sex %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*sex', 0) }}</th>
          <td class="odd">{{ before.sex }}</td>
          <td class="odd">{{ after.sex }}</td>
        </tr>
      {% endif %}

      {% if before.public_name != after.public_name %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*public name', 0) }}</th>
          <td class="odd">{{ before.public_name }}</td>
          <td class="odd">{{ after.public_name }}</td>
        </tr>
      {% endif %}

      {% if before.image != after.image %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*image/images', 0) }}</th>
          <td class="odd">{{ before.image }}</td>
          <td class="odd">{{ after.image }}</td>
        </tr>
      {% endif %}

      {% if before.qualifiers != after.qualifiers %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*qualifier', 0) }}</th>
          <td class="odd">{{ before.qualifiers }}</td>
          <td class="odd">{{ after.qualifiers }}</td>
        </tr>
      {% endif %}

      {% if before.aliases != after.aliases %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*alias', 0) }}</th>
          <td class="odd">{{ before.aliases }}</td>
          <td class="odd">{{ after.aliases }}</td>
        </tr>
      {% endif %}

      {% if before.first_names_aliases != after.first_names_aliases %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*first name alias', 0) }}</th>
          <td class="odd">{{ before.first_names_aliases }}</td>
          <td class="odd">{{ after.first_names_aliases }}</td>
        </tr>
      {% endif %}

      {% if before.surnames_aliases != after.surnames_aliases %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*surname alias', 0) }}</th>
          <td class="odd">{{ before.surnames_aliases }}</td>
          <td class="odd">{{ after.surnames_aliases }}</td>
        </tr>
      {% endif %}

      {% if before.occupation != after.occupation %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*occupation/occupations', 1) }}</th>
          <td class="odd">{{ before.occupation }}</td>
          <td class="odd">{{ after.occupation }}</td>
        </tr>
      {% endif %}

      {% for pevent in pevents %}
        {% if before['pevent_name'] != after['pevent_name'] or before['pevent_date'] != after['pevent_date'] or
             before['pevent_place'] != after['pevent_place'] or before['pevent_note'] != after['pevent_note'] or
             before['pevent_src'] != after['pevent_src'] or before['pevent_witness'] != after['pevent_witness'] %}
          <tr>
            <th scope="row" class="table-success text-nowrap">{{ t('*event/events', 0) }}</th>
            <td class="odd">{{ before.pevent_name }}</td>
            <td class="odd">{{ after.pevent_name }}</td>
          </tr>
          {% if before.pevent_date != after.pevent_date %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*date/dates', 0) }}</th>
              <td class="odd">{{ before.pevent_date }}</td>
              <td class="odd">{{ after.pevent_date }}</td>
            </tr>
          {% endif %}
          {% if before.pevent_place != after.pevent_place %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*place/places', 0) }}</th>
              <td class="odd">{{ before.pevent_place }}</td>
              <td class="odd">{{ after.pevent_place }}</td>
            </tr>
          {% endif %}
          {% if before.pevent_note != after.pevent_note %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*note/notes', 0) }}</th>
              <td class="odd">{{ before.pevent_note }}</td>
              <td class="odd">{{ after.pevent_note }}</td>
            </tr>
          {% endif %}
          {% if before.pevent_src != after.pevent_src %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*source/sources', 0) }}</th>
              <td class="odd">{{ before.pevent_src }}</td>
              <td class="odd">{{ after.pevent_src }}</td>
            </tr>
          {% endif %}
          {% if before.pevent_witness != after.pevent_witness %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*witness/witnesses', 1) }}</th>
              <td class="odd">{{ before.pevent_witness }}</td>
              <td class="odd">{{ after.pevent_witness }}</td>
            </tr>
          {% endif %}
          {{ empty() }}
        {% endif %}
      {% endfor %}

      {% if before.relations != after.relations %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*relation/relations', 1) }}</th>
          <td class="odd">{{ before.relations }}</td>
          <td class="odd">{{ after.relations }}</td>
        </tr>
      {% endif %}

      {% if before.titles != after.titles %}
        {{ empty() }}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*title/titles', 1) }}</th>
          <td class="odd">{{ before.titles }}</td>
          <td class="odd">{{ after.titles }}</td>
        </tr>
      {% endif %}

      {% if before.psources != after.psources %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*person source', 0) }}</th>
          <td class="odd">{{ before.psources }}</td>
          <td class="odd">{{ after.psources }}</td>
        </tr>
      {% endif %}

      {% if before.notes != after.notes %}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*note/notes', 1) }}</th>
          <td class="odd">{{ before.notes }}</td>
          <td class="odd">{{ after.notes }}</td>
        </tr>
      {% endif %}

      {% if before.access != after.access %}
        {{ empty() }}
        <tr>
          <th scope="row" class="table-success text-nowrap">{{ t('*access', 0) }}</th>
          <td class="odd">{{ before.access }}</td>
          <td class="odd">{{ after.access }}</td>
        </tr>
      {% endif %}
    {% endmacro %}

    {% macro print_diff_family() %}
      {% for family in families %}
        {% for fevent in family.fevents %}
          {% if before['fevent_name'] != after['fevent_name'] or before['fevent_date'] != after['fevent_date'] or
               before['fevent_place'] != after['fevent_place'] or before['fevent_note'] != after['fevent_note'] or
               before['fevent_src'] != after['fevent_src'] or before['fevent_witness'] != after['fevent_witness'] %}
            <tr>
              <th scope="row" class="table-success text-nowrap">{{ t('*event/events', 0) }}</th>
              <td class="odd">{{ before.fevent_name }}: {{ before.spouse }}</td>
              <td class="odd">{{ after.fevent_name }}: {{ after.spouse }}</td>
            </tr>
            {% if before.fevent_date != after.fevent_date %}
              <tr>
                <th scope="row" class="table-success text-nowrap">{{ t('*date/dates', 0) }}</th>
                <td class="odd">{{ before.fevent_date }}</td>
                <td class="odd">{{ after.fevent_date }}</td>
              </tr>
            {% endif %}
            {% if before.fevent_place != after.fevent_place %}
              <tr>
                <th scope="row" class="table-success text-nowrap">{{ t('*place/places', 0) }}</th>
                <td class="odd">{{ before.fevent_place }}</td>
                <td class="odd">{{ after.fevent_place }}</td>
              </tr>
            {% endif %}
            {% if before.fevent_note != after.fevent_note %}
              <tr>
                <th scope="row" class="table-success text-nowrap">{{ t('*note/notes', 0) }}</th>
                <td class="odd">{{ before.fevent_note }}</td>
                <td class="odd">{{ after.fevent_note }}</td>
              </tr>
            {% endif %}
            {% if before.fevent_src != after.fevent_src %}
              <tr>
                <th scope="row" class="table-success text-nowrap">{{ t('*source/sources', 0) }}</th>
                <td class="odd">{{ before.fevent_src }}</td>
                <td class="odd">{{ after.fevent_src }}</td>
              </tr>
            {% endif %}
            {% if before.fevent_witness != after.fevent_witness %}
              <tr>
                <th scope="row" class="table-success text-nowrap">{{ t('*witness/witnesses', 1) }}</th>
                <td class="odd">{{ before.fevent_witness }}</td>
                <td class="odd">{{ after.fevent_witness }}</td>
              </tr>
            {% endif %}
            {{ empty() }}
          {% endif %}
        {% endfor %}

        {% if before.children != after.children %}
          <tr>
            <th scope="row" class="table-success text-nowrap">{{ t('*child/children', 1) }}</th>
            <td class="odd">{{ before.children }}</td>
            <td class="odd">{{ after.children }}</td>
          </tr>
        {% endif %}
        {{ empty() }}
      {% endfor %}
    {% endmacro %}

    {% macro print_diff() %}
    <div class="text-center">
      <a {% if evar.old == history_len - 1 %}class="invisible"{% endif %} href="{{ prefix }}m={{ evar.m }}&t={{ evar.t }}&f={{ evar.f }}&new={{ evar.old }}&old={{ evar.old + 1 }}" title="{{ t('*previous/next diff', 0) }}"><span class="fa fa-arrow-left"></span> {{ t('*previous/next diff', 0) }}</a> |
      <a href="{{ prefix }}m={{ evar.m }}&t=SUM&f={{ evar.f }}">{% if evar.old - evar.new > 1 %}{{ evar.old - evar.new - 1 }} {{ t('intermediate revisions not shown', 0) }}{% else %}{{ t('revision history', 0) }}{% endif %}</a>
      | {% if evar.new != 0 %}<a href="{{ prefix }}m={{ evar.m }}&t={{ evar.t }}&f={{ evar.f }}&new={{ evar.new - 1 }}&old={{ evar.new }}" title="{{ t('*previous/next diff', 1) }}"> {{ t('*previous/next diff', 1) }} <span class="fa fa-arrow-right"></span></a>{% elif evar.new == 0 %}{{ t('last diff', 0) }}{% endif %}
    </div>

    <table class="table mb-0 mt-3">
      <colgroup>
        <col style="width:8%;border-right-style:inset">
        <col style="width:46%;border-right-style:inset">
        <col style="width:46%">
      </colgroup>
      <tr>
        <th scope="row" class="table-success text-nowrap">{{ t('*revision of', 0) }}</th>
        <td><b>{{ transl_date(before.date) }}</b></td>
        <td><b>{{ transl_date(after.date) }}</b></td>
      </tr>
      <tr>
        <th scope="row" class="table-success text-nowrap">{{ t('*wizard/wizards/friend/friends/exterior', 0) }}</th>
        <td><b>{{ before.wizard }}</b></td>
        <td><b>{{ after.wizard }}</b></td>
      </tr>
    </table>

    <table class="table mb-0">
      <colgroup>
        <col style="width:8%;border-right-style:inset">
        <col style="width:46%;border-right-style:inset">
        <col style="width:46%">
      </colgroup>
      <tr>
        <td colspan="3">
          <h2 class="highlight text-center">
            {{ t('*person/persons', 0) }}
          </h2>
        </td>
      </tr>
      {{ print_diff_person() }}
      {% if nb_families > 0 %}
        <tr>
          <td colspan="3">
            <h2 class="highlight text-center">
              {{ t('*family/families', 0) }}
            </h2>
          </td>
        </tr>
        {{ print_diff_family() }}
      {% endif %}
    </table>
    {% endmacro %}

    {% if evar.t == "SUM" %}
      {{ print_summary() }}
    {% else %}
      {{ print_diff() }}
    {% endif %}

    {% include 'trl.html.j2' %}
    {% include 'copyr.html.j2' %}
  </div>

  {% include 'js.html.j2' %}
  {{ query_time | safe }}
</body>
</html>